{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block content %}
    <div class="container">
        <div class="border shadow bg-white px-3 mt-3 row g-0 align-items-center">
            <div class="col-12 col-md-9 col-xl-10 py-3">
                <input type="text" class="border-0 w-100" placeholder="What are you working on?" id="task-name-input" />
            </div>
            <div class="col-12 col-md-3 col-xl-2 py-2 py-md-0 ps-md-3 border-top border-md-0 border-md-start d-flex justify-content-between align-items-center">
                <p class="m-0 lead" id="timer-display">00:00:00</p>
                <button class="btn btn-info btn-sm text-white" id="create-timer">START</button>
            </div>
        </div>

        <div class="mt-5 border rounded shadow">
            <div class="py-2 px-3 bg-secondary d-flex justify-content-between align-items-center">
                <small class="text-muted m-0">Today</small>
                <div>
                    <p class="m-0"><small class="text-sm text-muted me-2">Total:</small><span class="lead" id="total">00:00:00</span></p>
                </div>
            </div>
            <div id="task-list-container"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/pages/home.js') }}" defer></script>
{% endblock %}
